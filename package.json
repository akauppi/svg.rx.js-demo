{
  "name": "svg.rx.js-demo",
  "description": "Demoing 'svg.rx.js' library features",
  "private": "true",
  "keywords": [
    "svg",
    "vector",
    "dragging",
    "touch"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akauppi/svg.rx.js-demo"
  },
  "bugs": {
    "url": "https://github.com/akauppi/svg.rx.js-demo/issues"
  },
  "license": "MIT",
  "scripts": {
    "dev": "concurrently --restart-tries 10 --names rollup,sirv \"rollup -c -w\" \"sirv public --port 5000 --single --host 0.0.0.0 --dev\"",
    "build": "PROD=true rollup -c",
    "prod": "npm run build && sirv public --port 5000 --single --host 0.0.0.0",
    "clean": "(rm public/bundle/* public/bundle.css 2> /dev/null || true)",
    "gh-pages": "npm run build && gh-pages -d public"
  },
  "dependencies": {},
  "devDependencies": {
    "concurrently": "^5.0.2",
    "sirv-cli": "^1.0.0-next.3",
    "rollup": "^1.27.14",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-svelte": "^5.1.1",
    "rollup-plugin-terser": "^5.1.2",
    "rollup-pluginutils": "^2.8.2",
    "start-server-and-test": "^1.7.13",
    "svelte": "^3.17.3",
    "@sveltech/routify": "^1.0.1-38",
    "gh-pages": "^2.1.1"
  },
  "//comments": {
    "": [
      "Based on:",
      "- https://github.com/sveltech/routify-starter/blob/master/package.json",
      "",
      "We prefer 'concurrently' over 'run-p' (for no particular reason) and invoke 'routify' in the Rollup config file."
    ],
    "private": "marks that this package is not for publishing",
    "scripts": {
      "dev": "'sirv ... --host [0.0.0.0]' is so that the hosting is visible for e.g. touch devices, using the development machine's IP."
    },
    "devDependencies": {
      "concurrently": "Sweet!🍭 -> https://www.npmjs.com/package/concurrently"
    }
  }
}
